# ============================================================================
# CV TAILOR - Environment Configuration
# ============================================================================

# API Keys & Credentials
GEMINI_API_KEY=your_gemini_api_key_here
JWT_SECRET=your_jwt_secret_here_change_in_production

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cv-tailor
MONGODB_NAME=cv-tailor

# Redis (for caching and job queues)
REDIS_URL=redis://localhost:6379

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# File Storage
CV_STORAGE_PATH=./storage/cvs
MAX_CV_SIZE_MB=5
MAX_JOB_DESC_SIZE_MB=2

# Processing Timeouts (milliseconds)
CV_GENERATION_TIMEOUT=60000
ATS_CALCULATION_TIMEOUT=10000
PDF_CONVERSION_TIMEOUT=30000
AI_OPTIMIZATION_TIMEOUT=45000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=5

# Feature Flags
ENABLE_PDF_CONVERSION=true
ENABLE_CACHING=true
ENABLE_ASYNC_QUEUE=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# AWS S3 (Optional - for file storage)
AWS_REGION=us-east-1
AWS_S3_BUCKET=cv-tailor-files
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@cv-tailor.com

# Frontend URL (for links in emails)
FRONTEND_URL=http://localhost:3000

# Analytics & Monitoring (Optional)
SENTRY_DSN=
MIXPANEL_TOKEN=

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.7
